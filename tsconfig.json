{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "typeRoots": ["./node_modules/@types", "./src/interfaces", "./src/types"],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "src/swagger-output.json"],
    "exclude": ["node_modules", "uploads", "public"]
}
