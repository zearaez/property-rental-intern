{
    "name": "boilerplate-nodejs",
    "version": "1.0.0",
    "author": "Outcode Intern",
    "main": "dist/server.js",
    "license": "MIT",
    "engines": {
        "node": ">20.16.0",
        "npm": ">10.8"
    },
    "scripts": {
        "build": "ts-node src/swagger.ts && tsc && tsc-alias",
        "dev": "nodemon",
        "start": "node dist/server.js",
        "migrate": "prisma migrate dev",
        "generate": "prisma generate",
        "format:write": "prettier --write .",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
        "prisma:wipe-db": "prisma migrate reset --force --skip-seed",
        "gen:docs": "ts-node src/swagger.ts"
    },
    "dependencies": {
        "@bull-board/express": "^6.5.3",
        "@prisma/client": "5.18.0",
        "axios": "^1.6.7",
        "bcryptjs": "^2.4.3",
        "bull": "^4.16.5",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^16.3.1",
        "email-templates": "^12.0.1",
        "express": "^4.18.2",
        "handlebars": "^4.7.8",
        "inquirer": "^11.1.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.8",
        "prisma": "^5.7.1",
        "redis": "^4.7.0",
        "socket.io": "^4.8.0",
        "swagger-autogen": "^2.23.7",
        "swagger-ui-express": "^5.0.1",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.6.2",
        "winston": "^3.14.2",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/email-templates": "^10.0.4",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/lodash": "^4.17.7",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "@types/swagger-ui-express": "^4.1.6",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "tsconfig-paths": "^4.2.0"
    },
    "resolutions": {
        "@types/express": "4.17.21",
        "@types/express-serve-static-core": "4.17.43"
    }
}
